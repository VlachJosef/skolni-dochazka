# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /							controllers.Application.index
GET		/trida/nova				 	controllers.TridaController.create
GET		/trida/uprav			 	controllers.TridaController.edit
GET		/trida/uprav/:uuidTrida	 	controllers.TridaController.editTrida(uuidTrida)
POST	/trida					 	controllers.TridaController.save
PUT		/trida						controllers.TridaController.update
DELETE	/trida						controllers.TridaController.delete

GET		/zak/novy				 	controllers.ZakController.create
GET		/zak/uprav				 	controllers.ZakController.edit
POST	/zak				 		controllers.ZakController.save
GET		/zak/:uuidZak	 			controllers.ZakController.editZak(uuidZak)
POST	/zak/update		 			controllers.ZakController.update
DELETE	/zak						controllers.ZakController.delete

GET   	/assets/js/routes           controllers.Application.jsRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
